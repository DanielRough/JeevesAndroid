<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@android:drawable/list_selector_background" android:state_pressed="true">
        <corners android:radius="0dp" />
        <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
		<stroke android:width="0dp" android:color="#000000" />
    </item> <!-- pressed -->
    
    <!-- <item android:drawable="@color/white" /> default -->
    <item><shape android:shape="rectangle">
            <stroke android:width="0dp" android:color="#DCDCDC" />

            <solid android:color="@android:color/white" />

            <corners android:radius="0dp" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

            <stroke android:width="0dp" android:color="#000000" />
        </shape></item>

</selector>